class Contato {
  constructor(nome, telefone) {
    this._nome = nome;
    this._telefone = telefone;
  }

  get nome() {
    return this._nome;
  }

  set nome(novoNome) {
    this._nome = novoNome;
  }

  get telefone() {
    return this._telefone;
  }

  set telefone(novoTelefone) {
    this._telefone = novoTelefone;
  }

  exibirContato() {
    console.log(`Nome: ${this._nome}, Telefone: ${this._telefone}`);
  }
}
